<form method="post">
    <div class="row text-center">
        <div class="col">
            <h1>Регистрация</h1>
            <div>
                <input type="text" name="login" placeholder="Логин" />
            </div>
            <div>
                <input type="text" name="password" placeholder="Пароль" />
            </div>
            <div>
                <input type="text" name="confirmPassword" placeholder="Подтвердите пароль" />
            </div>         
        </div>
    </div>
    <br>
    <p align="center"><button type="submit" class="btn btn-dark" asp-controller="Registration" asp-action="Registration">Зарегистрироватся</button></p>
</form> 