<form method="post">
    <div class="row text-center">
        <div class="col">
            <h1>Вход</h1>
            <div>
                <input type="text" name="login" placeholder="Логин" />
            </div>
            <div>
                <input type="text" name="password" placeholder="Пароль" />
            </div>
            <div>
                <input type="checkbox" name="checkResp" value="true" />
                <label>Запомнить меня?</label>
            </div>
            <a asp-controller="Registration" asp-action="Index">Регистрация нового пользователя</a>
        </div>
    </div>
    <br>
    <p align="center"><button  type="submit" class="btn btn-dark" asp-controller="Authorization" asp-action="Authorization">Войти</button></p>
</form> 